{
  "manifest_version": 3,
  "name": "FocusMate LockMode",
  "version": "1.0.0",
  "description": "Browser extension for FocusMate classroom focus enforcement",
  "permissions": ["tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/*"],
      "js": ["content.js"]
    }
  ]
}
